@using MVC_Test.Models
@model WinkelWagenVM

@{
    ViewBag.Title = "Winkelwagentje";
    int i = 0;
}


<h2>Winkelwagentje</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Prijs</th>
            <th>Verwijderen</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var film in Model.lFilms)
        {
            //var urlVerwijderen = Url.Action("verwijderenVraag", "verhuren", new { filmVerwijderenID = i, filmVerwijderen = film });
            var urlVerwijderen = Url.Action("verwijderenVraag", "verhuren", new { filmVerwijderenID = i });
            <tr>
                <td class="col-md-3">@film.Titel</td>
                <td class="col-md-1"> @Html.DisplayFor(m => film.Prijs) </td>
                <td class="col-md-1">
                    <a href="@urlVerwijderen" class="btn-xs btn-default">verwijderen?</a>

                </td>
            </tr>
            i++;
        }
    </tbody>
</table>


<div class="modal">
    <div class="modal-content">
        <h2>Ben je zeker dat je deze film wil verwijderen?</h2>
        <span class="close-button">Nee</span>
    </div>
</div>


<a href="~/Verhuren/Verhuren/" class="btn btn-default">Verder winkelen</a>
@if (Model.lFilms.Count > 0)
{
<a href="~/Verhuren/Afrekenen/" class="btn btn-default">Afrekenen</a>
}