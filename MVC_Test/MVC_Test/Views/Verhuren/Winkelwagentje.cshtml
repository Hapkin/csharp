@using MVC_Test.Models
@model WinkelWagenVM

@{
    ViewBag.Title = "Winkelwagentje";
    
    int i = 0;


}

@* @Ajax.ActionLink("Open popup", "SomeAction", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "delete", InsertionMode = InsertionMode.Replace, OnSuccess = "openPopup" })<br />
*@

<script type="text/javascript">
    $(document).ready(function () {
        $("#delete").dialog({
            autoOpen: false,
            title: 'Delete?',
            width: 500,
            height: 'auto',
            modal: true
        });
    });
    function openPopup(filmID) {
        $("#delete").dialog("open");
    }
</script>




<h2>Winkelwagentje</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Prijs</th>
            <th>Verwijderen</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var film in Model.lFilms)
        {
            var urlVerwijderen = Url.Action("Verwijderen", "verhuren", new { id = i });
            <tr>
                <td class="col-md-3">@film.Titel</td>
                <td class="col-md-1"> @Html.DisplayFor(m => film.Prijs) </td>
                <td class="col-md-1">
                    @*<a href="@urlVerwijderen" class="btn-xs btn-default">verwijderen?</a>*@
                    <button onclick="openPopup(@i)" class="btn-xs btn-default">verwijderen</button>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

<div id="delete" class="modal-dialog">blablabla</div>

<a href="~/Verhuren/Verhuren/" class="btn btn-default">Verder winkelen</a>
<a href="~/Verhuren/Afrekenen/" class="btn btn-default">Afrekenen</a>

