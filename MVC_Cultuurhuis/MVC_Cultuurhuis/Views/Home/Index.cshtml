@model MVC_Cultuurhuis.Models.VoorstellingenViewModel
@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <h1>
        Het Cultuurhuis <img src="~/Images/voorstellingen.png"
                             alt="voorstellingen" />
    </h1>
    <p>
        @if (ViewBag.mandjeTonen)
        {
            <a href="@Url.Action("Mandje", "Home")"
               class="btn btn-primary btn-lg">Winkelmandje &raquo;</a>
            <a href="@Url.Action("Bevestiging", "Home")"
               class="btn btn-primary btn-lg">Kassa &raquo;</a>
        }
    </p>
</div>
@if (Model.Genre == null)
{
    <p class="lead alert alert-info">Kies een voorstellingsgenre</p>
}
<ul class="nav nav-pills">
    @foreach (var genre in Model.Genres)
    {
        var url = Url.Action("Index", "Home", new { id = genre.GenreNr });
        if (Model.Genre != null && Model.Genre.Naam.Equals(genre.Naam))
        {
            <li class="active">
                <a href="@url">@genre.Naam</a>
            </li>
        }
        else
        {
            <li>
                <a href="@url">@genre.Naam</a>
            </li>
        }
    }
</ul>

@if (Model.Genre != null)
{
    <br />@Model.Voorstellingen.Count();
    if (Model.Voorstellingen.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Datum</th>
                    <th>Titel</th>
                    <th>Uitvoerders</th>
                    <th class="rechts">Prijs</th>
                    <th class="rechts">Vrije plaatsen</th>
                    <th>Reserveren</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var voorstelling in Model.Voorstellingen)
                {
                    <tr>
                        <td class="col-md-2">
                            @Html.DisplayFor(m => voorstelling.Datum)
                        </td>
                        <td class="col-md-3">@voorstelling.Titel</td>
                        <td class="col-md-3">@voorstelling.Uitvoerders</td>
                        <td class="col-md-1 rechts">
                            @Html.DisplayFor(m => voorstelling.Prijs)
                        </td>
                        <td class="col-md-2 rechts">@voorstelling.VrijePlaatsen</td>
                        @if (voorstelling.VrijePlaatsen > 0)
                        {
                            var urlReserveren = Url.Action("Reserveren", "Home",
                            new { id = voorstelling.VoorstellingsNr });
                            <td class="col-md-1">
                                <a href="@urlReserveren">Reserveren</a>
                            </td>
                        }
                        else
                        {
                            <td class="col-md-1">
                                <span class="label label-danger">uitverkocht</span>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-warning">
            Er zijn geen voorstellingen van dit genre beschikbaar.
        </p>
    }
}
